PI = 3.14;              // less precision than the default value
value = remove-unit(x); // raw value

// convert any angle unit to radian
rad(x) 
  if unit(x)  is 'deg'
    unit(value * PI/180, 'rad');
  else if unit(x)  is 'turn' 
    unit(value * 2*PI, 'rad');
  else if unit(x)  is 'grad' 
    unit(value * PI/200, 'rad');
  
// convert any angle unit to degree
deg(x)
  if unit(x) is 'rad'
    unit(value * 180/PI, 'deg'); 
  else if unit(x)  is 'turn' 
    unit(value * 360, 'deg');
  else if unit(x)  is 'grad' 
    unit(value * 9/10, 'deg');
    
// convert any angle unit to turn
turn(x)
  if unit(x) is 'rad'
    unit(value / PI, 'turn'); 
  else if unit(x) is 'deg' 
    unit(value / 360, 'turn');
  else if unit(x) is 'grad' 
    unit(value / 400, 'turn');
    
// convert any angle unit to gradian
grad(x)
  if unit(x) is 'rad'
    unit(value * 200/PI, 'grad'); 
  else if unit(x)  is 'deg' 
    unit(value * 10/9, 'grad');
  else if unit(x)  is 'turn' 
    unit(value * 400, 'grad');

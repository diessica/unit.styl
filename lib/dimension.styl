// set the context for relative units
base-context = 100%;

// convert relative or absolute unit to px
px(x)
  if unit(x) is 'rem'
    unit(remove-unit(x) * base-context * 4/25, 'px');
  else if unit(x) is '%'
    unit(base-context * 4/25 * remove-unit(x) / 100, 'px'); 
  else if unit(x) is 'pt'
    unit(remove-unit(x) * 3/4 , 'px');